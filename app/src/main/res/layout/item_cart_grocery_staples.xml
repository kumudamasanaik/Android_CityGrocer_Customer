<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_8"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimens_10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dimens_150"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimens_8"
            android:layout_marginTop="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_8"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_launcher_background" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_15"
            android:gravity="bottom"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_discount_price_staples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="@string/_1_050_44"
                android:textColor="@color/colorTextOrange"
                android:textSize="@dimen/dimens_12sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_3"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/_1_400_00"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/dimens_10sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_3"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="@string/save_200"
                android:textColor="@color/colorTextOrange"
                android:textSize="@dimen/dimens_10sp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_save_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_3"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="200)"
                android:textColor="@color/colorTextOrange"
                android:textSize="@dimen/dimens_10sp" />

        </LinearLayout>

       <!-- <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginRight="@dimen/dimens_5"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center_vertical"
            android:text="@string/_1100_68_for_non_members"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/dimens_12sp" />-->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_8"
            android:layout_marginRight="@dimen/dimens_5"
            android:fontFamily="@font/sourcesanspro_regular"
            android:maxLines="2"
            android:text="Colgate 360 Floss Tip Tooth-brush(Buy 2 Get 1 Free)"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_12sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drop_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginRight="@dimen/dimens_5"
            android:background="@drawable/bg_outline_curve"
            android:drawablePadding="@dimen/dimens_8"
            android:fontFamily="@font/sourcesanspro_bold"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimens_5"
            android:paddingRight="@dimen/dimens_8"
            android:text="2+1pcs Set"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_13sp" />

        <LinearLayout
            android:id="@+id/ll_inc_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/tv_decrement"
                    android:layout_width="@dimen/dimens_30"
                    android:layout_height="@dimen/dimens_30"
                    app:srcCompat="@drawable/ic_remove_circle" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_sku_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:layout_marginRight="@dimen/dimens_10"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimens_15sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/tv_increment"
                    android:layout_width="@dimen/dimens_30"
                    android:layout_height="@dimen/dimens_30"
                    app:srcCompat="@drawable/ic_add_circle" />

            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch1"
                style="@style/SwitchCompatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Switch" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notify_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_notify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimens_10"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_round_curve_white"
                android:text="@string/notify"
                android:textColor="@color/colorPrimary" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimens_10"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_round_curve_white"
                android:text="@string/remove"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>