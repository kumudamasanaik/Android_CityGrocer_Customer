<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dimens_15"
        android:layout_height="@dimen/dimens_15"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dimens_8"
        app:srcCompat="@drawable/ic_close" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_35"
        android:layout_margin="@dimen/dimens_5"
        app:srcCompat="@drawable/ic_logo_1" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimens_5"
        android:layout_marginTop="@dimen/dimens_15"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="@string/logn_register_using_social"
        android:textColor="@color/colorTextGrey"
        android:textSize="@dimen/dimens_10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimens_35"
        android:layout_marginRight="@dimen/dimens_35"
        android:layout_marginTop="@dimen/dimens_5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_15"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_curve"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                app:srcCompat="@drawable/ic_fb" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:paddingLeft="@dimen/dimens_8"
                android:text="@string/facebook"
                android:textAllCaps="true"
                android:textColor="@color/colorForgotPassword"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_curve"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dimens_20"
                android:layout_height="@dimen/dimens_20"
                app:srcCompat="@drawable/ic_google" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:paddingLeft="@dimen/dimens_8"
                android:text="@string/google"
                android:textAllCaps="true"
                android:textColor="@color/colorForgotPassword"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_15"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="@string/or_use_email"
        android:textColor="@color/colorTextGrey"
        android:textSize="@dimen/dimens_10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimens_30"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimens_14sp" />

        <View
            android:layout_width="@dimen/dimens_1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimens_40"
            android:layout_marginRight="@dimen/dimens_40"
            android:background="@color/colorBlack" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="@string/register"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>
</LinearLayout>