<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dimens_8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_10"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="@string/terms_conditions"
                android:textSize="@dimen/dimens_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_10"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:text="@string/coupon_code"
                    android:textSize="@dimen/dimens_12sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:text="WINTER20"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dimens_12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:layout_marginTop="@dimen/dimens_10"
                android:background="@color/colorTextGrey" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/minimum_order_value_of_3000" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_5"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/maxmimum_discount_500" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_5"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="• Valid till 15th December, 2018." />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_5"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="• Other lines if any." />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_5"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="• Other lines if any." />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_10"
                android:layout_marginTop="@dimen/dimens_5"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/conditions_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:layout_marginTop="@dimen/dimens_10"
                android:background="@color/colorTextGrey" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_got_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimens_10"
                android:layout_marginBottom="@dimen/dimens_10"
                android:background="@drawable/bg_button_curve"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="@string/got_it"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>