<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sub_category_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_sub_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_80"
        android:layout_marginStart="@dimen/dimens_5"
        android:layout_marginEnd="@dimen/dimens_5"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_category" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_5"
        android:layout_marginTop="@dimen/dimens_5"
        android:layout_marginEnd="@dimen/dimens_5"
        android:layout_marginBottom="@dimen/dimens_5"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="UP TO 70% OFF"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimens_12sp" />

</LinearLayout>