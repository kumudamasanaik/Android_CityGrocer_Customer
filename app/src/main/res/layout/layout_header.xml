<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/ToolbarStyleLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_scrollFlags="scroll|enterAlways|snap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_toolbar_logo"
            android:layout_width="@dimen/dimens_30"
            android:layout_height="@dimen/dimens_30"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens_5"
            app:srcCompat="@drawable/ic_cg" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvtitle"
            style="@style/ToolbarTitleLoginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimens_5"
                app:srcCompat="@drawable/ic_search" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dimens_5"
                android:layout_marginRight="@dimen/dimens_5"
                app:srcCompat="@drawable/ic_share" />

            <FrameLayout
                android:id="@+id/cart_layout"
                style="?attr/actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:focusable="true">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="@dimen/dimens_25"
                    android:layout_height="@dimen/dimens_25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimens_5"
                    app:srcCompat="@drawable/ic_cart" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_badge"
                    android:layout_width="@dimen/dimens_20"
                    android:layout_height="@dimen/dimens_16"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimens_8sp"
                    android:visibility="gone" />
            </FrameLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_notification"
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimens_5"
                app:srcCompat="@drawable/ic_bell" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_more" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>