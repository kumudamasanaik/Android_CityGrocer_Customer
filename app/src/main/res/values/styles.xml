<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplash" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/splash_bg</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
        <item name="popupTheme">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/colorWhite</item>
    </style>

    <style name="FilterTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTextGrey</item>
    </style>

    <style name="MultiStateViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="msv_animateViewChanges">false</item>
        <item name="msv_emptyView">@layout/empty_view</item>
        <item name="msv_errorView">@layout/error_view</item>
        <item name="msv_loadingView">@layout/loading_view</item>
        <item name="msv_viewState">content</item>
    </style>


    <style name="ToolbarStyleHome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_menu_white</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarStyleLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="navigationIcon">@drawable/ic_menu</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimens_15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="ToolbarTitleLoginStyle">
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimens_15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="edittext_style_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_10</item>
        <item name="android:layout_marginLeft">@dimen/dimens_15</item>
        <item name="android:layout_marginRight">@dimen/dimens_15</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:paddingBottom">@dimen/dimens_5</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorHintGrey</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/dimens_15sp</item>
    </style>

    <style name="CustomDialogThemeLightBg" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorBlackOverlay</item>
        <item name="android:gravity">center</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/dimens_8</item>
        <item name="cardElevation">@dimen/dimens_4</item>
    </style>

    <style name="DialogCardView" parent="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimens_14</item>
        <item name="android:layout_marginBottom">@dimen/dimens_15</item>
        <item name="android:layout_marginTop">@dimen/dimens_15</item>
        <item name="android:layout_marginLeft">@dimen/dimens_14</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.13</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingLeft">@dimen/dimens_4</item>
        <item name="android:paddingRight">@dimen/dimens_4</item>
        <item name="android:paddingTop">@dimen/dimens_4</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimens_16sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
    </style>

    <style name="menu_drawer_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
    </style>

    <style name="DialogTextView_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.13</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingLeft">@dimen/dimens_4</item>
        <item name="android:paddingRight">@dimen/dimens_4</item>
        <item name="android:paddingTop">@dimen/dimens_4</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
    </style>

    <style name="AppTheme_Loading_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorTextGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="thumbTint">@color/colortheme</item>
        <item name="trackTint">@color/colortheme</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
    </style>
</resources>
